<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.OneDayWatcherActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/oneDay_back_button"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="13dp"
            android:layout_weight="1"
            android:background="@drawable/icon_back" />

        <TextView
            android:id="@+id/oneDay_Title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="12"
            app:fontFamily="@font/roboto_thin"
            android:textSize="24sp"
            android:gravity="center"
            android:text="En cours de chargement..."/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/food_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Nourriture"
                app:fontFamily="@font/roboto_thin"
                android:textSize="24sp"
                android:gravity="bottom"/>

            <TextView
                android:id="@+id/oneDay_foodObjectif"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:fontFamily="@font/roboto_thin"
                android:textSize="14sp"
                android:text="Votre objectif: 00,00$"/>

        </LinearLayout>

        <TextView
            android:id="@+id/oneDay_foodExpense"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="00,00$"
            app:fontFamily="@font/roboto_thin"
            android:textSize="24sp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lodging_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Hébergement"
                app:fontFamily="@font/roboto_thin"
                android:textSize="24sp"
                android:gravity="bottom"/>

            <TextView
                android:id="@+id/oneDay_lodgingObjectif"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:fontFamily="@font/roboto_thin"
                android:textSize="14sp"
                android:text="Votre objectif: 00,00$"/>

        </LinearLayout>

        <TextView
            android:id="@+id/oneDay_lodgingExpense"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="00,00$"
            app:fontFamily="@font/roboto_thin"
            android:textSize="24sp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Activités"
                app:fontFamily="@font/roboto_thin"
                android:textSize="24sp"
                android:gravity="bottom"/>

            <TextView
                android:id="@+id/oneDay_activityObjectif"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:fontFamily="@font/roboto_thin"
                android:textSize="14sp"
                android:text="Votre objectif: 00,00$"/>

        </LinearLayout>

        <TextView
            android:id="@+id/oneDay_activityExpense"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="00,00$"
            app:fontFamily="@font/roboto_thin"
            android:textSize="24sp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/transport_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Transport"
                app:fontFamily="@font/roboto_thin"
                android:textSize="24sp"
                android:gravity="bottom"/>

            <TextView
                android:id="@+id/oneDay_transportObjectif"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:fontFamily="@font/roboto_thin"
                android:textSize="14sp"
                android:text="Votre objectif: 00,00$"/>

        </LinearLayout>

        <TextView
            android:id="@+id/oneDay_transportExpense"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="00,00$"
            app:fontFamily="@font/roboto_thin"
            android:textSize="24sp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_margin="13dp"
            android:layout_weight="1"
            android:background="@drawable/icon_info" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="17"
            app:fontFamily="@font/roboto_thin"
            android:textSize="12sp"
            android:gravity="left|center"
            android:text="Appuyez longuement pour afficher les dépenses d'une catégorie"/>

    </LinearLayout>



</LinearLayout>