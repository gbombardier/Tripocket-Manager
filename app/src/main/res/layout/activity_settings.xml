<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:elevation="5dp"
        android:background="@drawable/login_bg">

        <ImageView
            android:id="@+id/settings_back_button"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="13dp"
            android:layout_weight="1"
            android:background="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/text_field3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="start|center"
            android:text="Paramètres"
            app:fontFamily="@font/roboto_thin"
            android:textSize="24sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/settings_account_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/settings_button_password"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/login_rounded_border"
            android:text="Modifier le mot de passe" />

        <Button
            android:id="@+id/settings_button_logout"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/login_rounded_border"
            android:text="Se déconnecter" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"/>
    </LinearLayout>


</LinearLayout>
